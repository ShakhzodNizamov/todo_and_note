<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/color_crucial"
        android:background="@drawable/fab_bg_normal"
        android:layout_margin="10dp"
        android:layout_width="50dp"

        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/crucial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:text="Crucial"
        android:textColor="@color/colorCrucial"
        android:textSize="18sp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="@id/color_crucial"
        app:layout_constraintLeft_toRightOf="@id/color_crucial"
        app:layout_constraintBottom_toBottomOf="@id/color_crucial"/>

    <View
        android:id="@+id/color_important"
        android:background="@drawable/fab_bg_normal"
        android:layout_margin="10dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/color_crucial"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/important"
        android:layout_width="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:layout_height="wrap_content"
        android:text="Important"
        android:textColor="@color/colorImportant"
        android:textSize="18sp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="@id/color_important"
        app:layout_constraintLeft_toRightOf="@id/color_important"
        app:layout_constraintBottom_toBottomOf="@id/color_important"/>

    <View
        android:id="@+id/color_free"
        android:background="@drawable/fab_bg_normal"
        android:layout_margin="10dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/color_important"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/free"
        android:layout_width="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:textColor="@color/colorFree"
        android:layout_height="wrap_content"
        android:text="Free"
        android:textSize="18sp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="@id/color_free"
        app:layout_constraintLeft_toRightOf="@id/color_free"
        app:layout_constraintBottom_toBottomOf="@id/color_free"/>
</androidx.constraintlayout.widget.ConstraintLayout>